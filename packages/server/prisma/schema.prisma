// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  avatar    String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  projects           Project[]
  tasks              Task[]
  timeEntries        TimeEntry[]
  notifications      Notification[]
  userFilters        UserFilter[]
  reminderSettings   ReminderSettings?
  scheduledReminders ScheduledReminder[]
  
  @@map("users")
}

model Project {
  id          String  @id @default(cuid())
  name        String
  description String?
  color       String  @default("#1976d2")
  archived    Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks  Task[]
  
  @@map("projects")
}

model Task {
  id          String      @id @default(cuid())
  title       String
  description String?
  status      String      @default("TODO")
  priority    String      @default("MEDIUM")
  dueDate     DateTime?
  completedAt DateTime?
  archived    Boolean     @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String?
  project   Project?   @relation(fields: [projectId], references: [id], onDelete: SetNull)
  
  timeEntries        TimeEntry[]
  tags               TaskTag[]
  scheduledReminders ScheduledReminder[]
  
  @@map("tasks")
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  color String @default("#666666")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  tasks TaskTag[]
  
  @@map("tags")
}

model TaskTag {
  taskId String
  tagId  String
  
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)
  
  @@id([taskId, tagId])
  @@map("task_tags")
}

model TimeEntry {
  id          String    @id @default(cuid())
  description String?
  startTime   DateTime
  endTime     DateTime?
  duration    Int?      // Duration in seconds
  isRunning   Boolean   @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  @@map("time_entries")
}

model Notification {
  id      String           @id @default(cuid())
  title   String
  message String
  type    String           @default("INFO")
  read    Boolean          @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("notifications")
}

model UserFilter {
  id      String @id @default(cuid())
  name    String
  filters String // JSON string with filter parameters
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, name])
  @@map("user_filters")
}

model ReminderSettings {
  id                    String  @id @default(cuid())
  emailReminders        Boolean @default(true)
  pushNotifications     Boolean @default(true)
  reminderFrequency     String  @default("DAILY") // DAILY, WEEKLY, CUSTOM
  daysBeforeDeadline    Int     @default(1)
  customReminderTimes   String? // JSON array of times like ["09:00", "17:00"]
  quietHoursStart       String? // Time like "22:00"
  quietHoursEnd         String? // Time like "08:00"
  weekendReminders      Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("reminder_settings")
}

model ScheduledReminder {
  id            String   @id @default(cuid())
  type          String   // EMAIL, PUSH
  scheduledFor  DateTime
  sent          Boolean  @default(false)
  title         String
  message       String
  metadata      String?  // JSON with additional data (taskId, etc.)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskId String?
  task   Task?  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  @@map("scheduled_reminders")
}

// For SQLite compatibility, we use string constants instead of enums
// TaskStatus: "TODO" | "IN_PROGRESS" | "COMPLETED" | "CANCELLED"
// TaskPriority: "LOW" | "MEDIUM" | "HIGH" | "URGENT"  
// NotificationType: "INFO" | "WARNING" | "ERROR" | "SUCCESS" 